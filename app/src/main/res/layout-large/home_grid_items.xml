<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E4E4E4"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/product_image_width"
        android:layout_height="@dimen/relative_layout_height_in_grid"
        android:layout_marginLeft="@dimen/margin1"
        android:layout_marginRight="@dimen/margin1"
        android:layout_marginTop="@dimen/margin1"
        android:background="@drawable/big_box"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/product_image_width"
            android:layout_height="@dimen/product_image_width"
            android:layout_gravity="right"
            android:background="#ffffff"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/sold_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin2"
            android:layout_marginTop="@dimen/margin2"
            android:background="@drawable/hand_green"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/reserve_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin2"
            android:layout_marginTop="@dimen/margin2"
            android:background="@drawable/reserv"
            android:visibility="gone" />

        <TextView
            android:id="@+id/product_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="$50"
            android:textColor="#464646"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_rate"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_marginRight="@dimen/margin1"
            android:maxLines="2"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="#8b8a8a" />
    </RelativeLayout>

</LinearLayout>