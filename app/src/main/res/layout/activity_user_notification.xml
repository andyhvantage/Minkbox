<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E4E4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin2"
        android:layout_marginRight="@dimen/margin2"
        android:layout_marginTop="@dimen/margin1"
        android:background="@drawable/small_box"
        android:orientation="vertical"
        android:padding="@dimen/margin2">

        <TextView
            android:id="@+id/emailtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin1"
            android:text="Recommended message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin1"
            android:background="@color/wallet_hint_foreground_holo_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chat_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin1"
                android:textSize="@dimen/small_text_size"
                android:text="Chat message and Miscellaneous"
                android:textColor="#000" />

            <CheckBox
                android:id="@+id/chat_msg_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin2"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/review_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reviews and feedback received"
                android:textColor="#000" />

            <CheckBox
                android:id="@+id/review_msg_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:checked="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin2"
        android:layout_marginRight="@dimen/margin2"
        android:layout_marginTop="@dimen/margin2"
        android:visibility="gone"
        android:background="@drawable/small_box"
        android:orientation="vertical"
        android:padding="@dimen/margin2">

        <TextView
            android:id="@+id/recommendedtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin1"
            android:text="Recommended message" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin1"
            android:background="@color/wallet_hint_foreground_holo_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin2"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/favorite_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Someone added your listing to their favorites!"
                android:textColor="#000" />

            <CheckBox
                android:id="@+id/favorites_msg_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/miscellan_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin1"
                android:text="Miscellaneous"
                android:textColor="#000" />

            <CheckBox
                android:id="@+id/miscellan_msg_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:checked="true" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:text="Apply" />

    </LinearLayout>
</LinearLayout>