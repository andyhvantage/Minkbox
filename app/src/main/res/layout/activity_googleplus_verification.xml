<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativegplus"
    tools:context="com.minkbox.GoogleplusVerificationActivity">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin2"
        android:layout_marginRight="@dimen/margin2"
        android:layout_marginTop="@dimen/margin4"
        android:layout_below="@+id/container_toolbar"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/google_image"
            android:layout_width="@dimen/profile_image_height_width"
            android:layout_height="@dimen/profile_image_height_width"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/google" />

        <TextView
            android:id="@+id/google_plus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin4"
            android:text="Google Plus"
            android:textColor="#000"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/verifacation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin2"
            android:text="Please Verify your identity with Google plus"
            android:textSize="@dimen/small_text_size" />

        <Button
            android:id="@+id/profile_verify_button_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/margin4"
            android:background="@drawable/oval_btn_background"
            android:text="Please verify your profile"
            android:textSize="@dimen/small_text_size" />
        <Button
            android:id="@+id/profile_verify_button_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/margin4"
            android:background="@drawable/oval_btn_background"
            android:visibility="gone"
            android:text="SignOut"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

</RelativeLayout>
