<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.minkbox.EmailVerificationActivity">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container_toolbar"
        android:layout_marginLeft="@dimen/margin2"
        android:layout_marginRight="@dimen/margin2"
        android:layout_marginTop="@dimen/margin4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/email_image"
            android:layout_width="@dimen/profile_image_height_width"
            android:layout_height="@dimen/profile_image_height_width"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/mail" />

        <TextView
            android:id="@+id/google_plus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin4"
            android:text="Email"
            android:textColor="#000"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/verifacation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_marginRight="@dimen/margin2"
            android:layout_marginTop="@dimen/margin2"
            android:maxLines="2"
            android:text="Press the button so we can send you a"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/verifacation_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/margin2"
            android:layout_marginRight="@dimen/margin2"
            android:maxLines="2"
            android:text="verification mail"
            android:textSize="@dimen/small_text_size" />

        <Button
            android:id="@+id/profile_verify_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/margin4"
            android:background="@drawable/oval_btn_background"
            android:text="Send Email"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>


</RelativeLayout>